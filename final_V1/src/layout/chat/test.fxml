<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<SplitPane fx:id="root" dividerPositions="0.264" prefHeight="850.0" prefWidth="1028.0"
           style="-fx-background-color: #2A363F;" stylesheets="@Chat.css" xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="layout.chat.ChatC">
    <items>
        <VBox alignment="CENTER" maxWidth="271.0" minWidth="271.0" SplitPane.resizableWithParent="false">
            <children>
                <MenuButton alignment="CENTER" mnemonicParsing="false" popupSide="RIGHT" prefHeight="65.0"
                            prefWidth="272.0" style="-fx-background-color: transparent;" text="Insert Username"
                            textFill="#fbfcfc" VBox.vgrow="ALWAYS">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#addFriend" text="Add Friend"/>
                        <MenuItem fx:id="logout" mnemonicParsing="false" onAction="#logout" text="Logout"/>
                    </items>
                    <font>
                        <Font size="24.0"/>
                    </font>
                </MenuButton>
                <HBox/>
                <Line endX="267.0" startX="66.5" stroke="#465058" strokeWidth="2.0"/>
                <ListView fx:id="lvFriends" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #2A363F;"
                          VBox.vgrow="ALWAYS">
                </ListView>
            </children>
        </VBox>
        <VBox alignment="CENTER" styleClass="msgWindow">
            <children>
                <HBox alignment="CENTER" prefHeight="65.0" prefWidth="632.0" styleClass="chat-friend-Hbox">
                    <children>
                        <Label fx:id="chatName" text="Select a friend first" textFill="#fbfcfc">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <ScrollPane fx:id="spChat" fitToWidth="true" hbarPolicy="NEVER" prefHeight="601.0" prefWidth="642.0"
                            VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="vbChatBox" spacing="10.0">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER_RIGHT" prefHeight="74.0" prefWidth="632.0"
                      style="-fx-background-color: #ffffff;" VBox.vgrow="SOMETIMES">
                    <children>
                        <TextField fx:id="tfMessage" prefHeight="44.0" prefWidth="399.0" promptText="type your message"
                                   style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </TextField>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#sendMessage" prefHeight="73.0"
                                prefWidth="148.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="41.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../pictures/send.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </items>
</SplitPane>
